<UserControl x:Class="CC_WPF_Ex3.AddressControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CC_WPF_Ex3"
             mc:Ignorable="d" 
             d:DesignWidth="300">

    <Grid Background="Bisque" Height="117">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" HorizontalAlignment="Center" Margin="2" Text="Dirección: "/>
        <TextBlock Grid.Row="1" HorizontalAlignment="Center" Margin="2" Text="Ciudad: "/>
        <TextBlock Grid.Row="2" HorizontalAlignment="Center" Margin="2" Text="Provincia: "/>
        <TextBlock Grid.Row="3" HorizontalAlignment="Center" Margin="2" Text="País: "/>
        <TextBlock Grid.Row="4" HorizontalAlignment="Center" Margin="2" Text="CP: "/>

        <TextBox Grid.Column="1" Grid.Row="0" Margin="2"/>
        <TextBox Grid.Column="1" Grid.Row="1" Margin="2"/>
        <TextBox Grid.Column="1" Grid.Row="2" Margin="2"/>
        <TextBox Grid.Column="1" Grid.Row="3" Margin="2"/>
        <TextBox Grid.Column="1" Grid.Row="4" Margin="2"/>

    </Grid>
</UserControl>
