<Window x:Class="ClickGame_Ex2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClickGame_Ex2"
        mc:Ignorable="d"
        Title="Explota globos" Height="450" Width="800">
    <Canvas Name="MyCanvas" Background="AliceBlue" MouseLeftButtonDown="ClickOnCanvas">
        <Label Name="txtScore" FontSize="24" FontWeight="Bold" Foreground="BurlyWood" Content="Puntuación:" Canvas.Left="10" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label Name="txtLastScore" FontSize="20" FontWeight="Bold" Foreground="CadetBlue" Content="Última puntuación: " Canvas.Left="10" Canvas.Top="387" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Rectangle Name="healthBar" Height="22" Canvas.Left="476" Stroke="Black" Canvas.Top="20" Width="297" Fill="GreenYellow" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label Name="txtHealth" FontSize="20" FontWeight="Bold" Content="Vida:" Foreground="CadetBlue" Canvas.Left="406" Canvas.Top="13" HorizontalAlignment="Left" VerticalAlignment="Center"/>



    </Canvas>
</Window>
