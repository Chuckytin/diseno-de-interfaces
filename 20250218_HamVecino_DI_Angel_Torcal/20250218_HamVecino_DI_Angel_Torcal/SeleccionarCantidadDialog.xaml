<Window x:Class="_20250218_HamVecino_DI_Angel_Torcal.SeleccionarCantidadDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Seleccionar Cantidad" Height="200" Width="300"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10">
        <TextBlock Text="Seleccione la cantidad:" FontSize="16" Margin="0,10"/>
        <TextBox x:Name="CantidadTextBox" FontSize="14" Margin="0,10" Text="1"/>
        <Button Content="Aceptar" Click="AceptarButton_Click" Width="100" HorizontalAlignment="Center" Margin="0,10"/>
    </StackPanel>
</Window>