<UserControl x:Class="CC_WPF_Tiers_Ex1.Componentes.Casilla"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CC_WPF_Tiers_Ex1.Componentes"
             mc:Ignorable="d"
             x:Name="Root" Width="270" Height="384">

    <Grid HorizontalAlignment="Left" Margin="23,70,0,0" VerticalAlignment="Top" Height="240" Width="212" Background="#FF9AADFB">

        <Label Name="lbl_tier" Content="Casilla" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="18"/>

        <StackPanel x:Name="pnl" Height="70" Margin="0,50,0,120" Background="#FFEC6868" Width="106"/>

        <Label Name="lbl_package" Content="Paquete básico" HorizontalAlignment="Center" Margin="0,139,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="15"/>
        <Label Name="lbl_description" 
               Content="{Binding Description, ElementName=Root}" 
               HorizontalAlignment="Center" 
               Margin="0,170,0,0" 
               VerticalAlignment="Top"/>

        <Button Name="btn" Content="Seleccionar" HorizontalAlignment="Center" Margin="0,200,0,0" Padding="5" BorderBrush="Black" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
    </Grid>

</UserControl>
